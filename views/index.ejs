<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gamer hut</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <%- include('./partials/header') %>

    <main>
      <h3>Categories</h3>
      <div class="catContainer">
        <% for (let cat of cats) { %>
          <%- include('./partials/catCard', {cat, capitalize}) %>
        <% } %>
      </div>

      <h3>All items</h3>
      <div class="itemContainer">
        <% for (let item of items) { %>
          <%- include('./partials/itemCard', {item}) %>
        <% } %>
      </div>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
