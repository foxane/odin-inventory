<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/metadata') %>
  <script defer src="/scripts/deleteModal.js"></script>
  <title>All categories</title>
</head>
<body  class="container-fluid d-flex flex-column justify-content-between">
  <%- include('partials/deleteModal') %>
  <%- include('partials/header') %>

  <div class="container">
    <div class="mb-3 gap-5 d-flex justify-content-center align-items-center">
      <h1>All categories</h1>
      <a href="/new/category" class="btn btn-success">Add new</a>
    </div>

      <% for (const cat of categories) { %>
        <div class="card mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><%= capitalize(cat.name) %></h5>
            <div>
              <a href="/edit/category/<%=cat.id%>" class="btn btn-primary">Edit</a>
              <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-url="/delete/category/<%= cat.id %>" data-name="<%=cat.name%>">
                Delete
              </button>
            </div>
          </div>
        </div>
      <% } %>

    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>